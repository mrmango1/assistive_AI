# ruta del archivo: /Users/mrmango1/Work/personal/assistive_AI/.env.example
OPENAI_API_KEY=your_openai_api_key_here

# Configuración de OCR
# Establecer en true para usar OpenAI GPT-4 Vision para OCR (requiere clave API e internet)
# Establecer en false para usar Tesseract OCR local
USE_OPENAI_OCR=true

# Configuración de TTS  
# Establecer en true para usar OpenAI TTS para síntesis de voz de alta calidad
# Establecer en false para usar TTS local (Coqui TTS o TTS del sistema)
USE_OPENAI_TTS=true

# Opciones de Voz de OpenAI TTS
# Voces disponibles: alloy, echo, fable, onyx, nova, shimmer
OPENAI_TTS_VOICE=alloy

# Configuración de Idioma
LANGUAGE=spa
